-provide(:title, "Sign up")

%h1 Sign up

= form_for(@user) do |f|
	.forms
		%ul
			%li #{f.label :name} #{f.text_field :name}
			%li #{f.label :email} #{f.text_field :email}
			%li #{f.label :password} #{f.password_field :password}
			%li #{f.label :password_confirmation, "Password Confirmation"} #{f.password_field :password_confirmation}
			%p= f.submit "Sign up"